<Window x:Class="ChatWCF.Create_Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatWCF"
        mc:Ignorable="d"
        Title="Create_Chat" Height="200" Width="220">
    <Grid>
        <Label Content="Chat name" HorizontalAlignment="Left" Margin="50,44,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ChatNameTextBox" HorizontalAlignment="Left" Height="23" Margin="50,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="CreateBtn" Content="Create" HorizontalAlignment="Left" Margin="70,115,0,0" VerticalAlignment="Top" Width="80" Click="CreateBtn_Click"/>

    </Grid>
</Window>

<Window x:Class="ChatWCF.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatWCF"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="395.333" Width="250">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="61,25,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="61,84,0,0" VerticalAlignment="Top"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="61,143,0,0" VerticalAlignment="Top"/>
        <Label Content="Surename" HorizontalAlignment="Left" Margin="61,202,0,0" VerticalAlignment="Top" Width="65"/>

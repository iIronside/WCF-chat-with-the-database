        <TextBox Name="PasswordTxtBox" HorizontalAlignment="Left" Height="23" Margin="61,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="NameTxtBox" HorizontalAlignment="Left" Height="23" Margin="61,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="SurenameTxtBox" HorizontalAlignment="Left" Height="23" Margin="61,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="PatronymicTxtBox" HorizontalAlignment="Left" Height="23" Margin="61,292,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="RegistrBtn" Content="Registration" HorizontalAlignment="Left" Margin="83,327,0,0" VerticalAlignment="Top" Width="75" Click="RegistrationBtn_Click"/>
    </Grid>
</Window>
